@import 'nib';

button(type) {
  if (type == 'normal') {
    bgColor = #eee;
    borderColor = #ccc;
    textColor = #555;
  }

  background-color: bgColor;
  border: solid 1px borderColor;
  border-radius: 5px;
  padding: 0 10px;
  font-size: 12px;
  line-height: 14px;
  color: textColor;
  cursor: pointer;
  user-select: none;
  &:hover {
    background-color: bgColor + 40%;
    color: textColor;
    border-color: borderColor - 10%;
  }
}