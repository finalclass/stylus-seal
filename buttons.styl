@import 'nib';
@import 'colors';

button(type) {
  if (type == 'button-default') {
    bgColor = color-default;
    borderColor = #aaa;
    textColor = #fff;
  }

  if (type == 'button-danger') {
    bgColor = color-danger;
    borderColor = #ccc;
    textColor = #ffffff;
  }

  background-color: bgColor;
  border: solid 1px borderColor;
  border-radius: 5px;
  padding: 0 10px;
  font-size: 16px;
  line-height: 18px;
  color: textColor;
  cursor: pointer;
  user-select: none;
  transition: background-color 0.5s;
  &:hover {
    background-color: bgColor + #191919;
    color: textColor + #111;
    border-color: borderColor - #222;
  }
}